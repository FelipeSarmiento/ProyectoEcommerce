@model UsuarioModel;
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="min-h-full flex items-center justify-center">
    <div class="w-9/12 space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Registrate</h2>
            <h2 class="text-center mt-2 text-xl font-extrabold text-purple-600">@TempData["Message"]</h2>
        </div>
        <form class="mt-8 space-y-6" asp-action="Register" asp-controller="Autenticacion" method="POST">
            <div class="rounded-md shadow-sm -space-y-px grid grid-cols-2 gap-x-8">
                <div>
                    <label for="user" class="">Usuario</label>
                    <input asp-for="Usuario" id="user" type="text" required autocomplete="off" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Usuario">
                </div>
                <div>
                    <label for="email" class="">Email:</label>
                    <input asp-for="Email" id="email" type="email" required autocomplete="off" class="appearance-none bg-gray-100 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email">
                </div>
                <div>
                    <label for="primerNombre" class="">Primer nombre</label>
                    <input asp-for="PrimerNombre" id="primerNombre" type="text" required autocomplete="off" class="appearance-none bg-gray-100 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Primer Nombre">
                </div>
                <div>
                    <label for="segundoNombre" class="">Segundo nombre</label>
                    <input asp-for="SegundoNombre" id="segundoNombre" type="text" autocomplete="off" value="" class="appearance-none bg-gray-100 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Segundo Nombre">
                </div>
                <div>
                    <label for="primerApellido" class="">Primer apellido</label>
                    <input asp-for="PrimerApellido" id="primerApellido" type="text" required autocomplete="off" class="appearance-none bg-gray-100 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Primer Apellido">
                </div>
                <div>
                    <label for="segundoApellido" class="">Segundo apellido</label>
                    <input asp-for="SegundoApellido" id="segundoApellido" type="text" required autocomplete="off" class="appearance-none bg-gray-100 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Segundo Apellido">
                </div>
                <div>
                    <label for="fechaNacimiento" class="">Fecha Nacimiento</label>
                    <input asp-for="FNacimiento" id="fechaNacimiento" type="date" required autocomplete="off" class="appearance-none bg-gray-100 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Fecha Nacimiento">
                </div>
                <div>
                    <label for="telefono" class="">Telefono:</label>
                    <input asp-for="Telefono" id="telefono" type="text" required autocomplete="off" class="appearance-none bg-gray-100 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Telefono">
                </div>
                <div>
                    <label for="direccion" class="">Direccion:</label>
                    <input asp-for="Direccion" id="direccion" type="text" required autocomplete="off" class="appearance-none bg-gray-100 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Direccion">
                </div>
                <div>
                    <label for="tipoUsuario" class="">Tipo de Usuario:</label>
                    <select asp-for="TipoUsuario" id="tipoUsuario" class="bg-gray-100 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm">
                        <option value="cliente">Cliente</option>
                        <option value="negocio">Negocio</option>
                    </select>
                </div>
                <div>
                    <label for="password" class="">Contraseña:</label>
                    <input asp-for="Password" id="password" type="password" required autocomplete="off" class="appearance-none bg-gray-100 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Contraseña">
                </div>
            </div>
            <div class="flex space-x-4 justify-center">
                <button type="submit" class="group relative w-2/4 overflow-x-hidden flex justify-center py-2 px-4 border text-sm font-medium rounded-md text-purple-600 border-2 border-purple-600 hover:bg-purple-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Registrarse
                </button>
                <a class="group relative w-2/4 flex justify-center py-2 px-4 border text-sm font-medium rounded-md text-purple-600 border-2 border-purple-600 hover:bg-purple-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" asp-action="Login" asp-controller="Autenticacion">
                    Ingresar
                </a>
            </div>
        </form>
    </div>
</div>
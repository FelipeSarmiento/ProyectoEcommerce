@model ProyectoeCommerce.Models.Autenticacion.UsuarioModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Ingresa con tu cuenta</h2>
            <h2 class="text-center mt-2 text-xl font-extrabold text-purple-600">@TempData["Message"]</h2>
        </div>
        <form class="mt-8 space-y-6" asp-action="Login" asp-controller="Autenticacion" method="POST">
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="user" class="">Usuario</label>
                    <input asp-for="Usuario" id="user" type="text" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Usuario">
                </div>
                <div>
                    <label for="password" class="">Contraseña</label>
                    <input asp-for="Password" id="password" type="password" required class="appearance-none bg-gray-100 rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Contraseña">
                </div>
            </div>
            <div class="flex space-x-4 justify-center">
                <button type="submit" class="group relative w-2/4 flex justify-center py-2 px-4 border text-sm font-medium rounded-md text-purple-600 border-2 border-purple-600 hover:bg-purple-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Ingresar
                </button>
                <a class="group relative w-2/4 flex justify-center py-2 px-4 border text-sm font-medium rounded-md text-purple-600 border-2 border-purple-600 hover:bg-purple-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" asp-action="Register" asp-controller="Autenticacion">
                    Registrarse
                </a>
            </div>
        </form> 
    </div>
</div>
@{
    ViewBag.Title = "Negocios";
}

<div class="h-10 flex justify-end px-10">
    <a asp-action="NuevoNegocio" asp-controller="Negocios">
        <button class="bg-purple-600 px-4 rounded-lg text-white h-10">Nuevo Negocio</button>
    </a>
</div>
@{
    if (ViewBag.Negocios.Item1)
    {
        <div class="px-5 py-5 space-y-5 my-10 rounded-lg">
            <div class="border-b-2 text-purple-600 font-bold border-purple-600 rounded-lg flex items-center justify-between px-5 py-2">
                <div class="w-[20%] text-center"></div>
                <div class="w-[20%] text-center">Nombre del negocio</div>
                <div class="w-[20%] text-center">Descripcion</div>
                <div class="w-[20%] text-center">Cantidad de productos</div>
                <div class="w-[20%] text-center"></div>
            </div>
            @{
                foreach (var negocio in ViewBag.Negocios.Item2)
                {
                    <div class="border-2 border-black rounded-lg flex items-center justify-between px-5">
                        <div class="w-[20%] h-20 flex justify-center items-center">Imagen</div>
                        <div class="w-[20%] text-center">@negocio.Nombre</div>
                        <div class="w-[20%] text-center">@negocio.Descripcion</div>
                        <div class="w-[20%] text-center">@negocio.cantidadProductos</div>
                        <div class="w-[20%] text-end">
                            <a asp-action="AdministrarNegocio" asp-controller="Negocios" asp-route-idNegocio="@negocio.idNegocio">
                                <button class="h-10 bg-purple-600 px-4 rounded-lg text-white border-2 border-purple-600 hover:bg-white hover:text-purple-600 font-bold">Administrar</button>
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <div class="px-5 py-5 space-y-5 my-10 rounded-lg">
            <div class="border-b-2 text-purple-600 font-bold border-purple-600 rounded-lg py-4 text-center text-2xl">
                No hay negocios para mostrar
            </div>
        </div>
    }
}